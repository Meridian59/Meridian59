{
  "name": "blakod-support",
  "displayName": "Blakod Support",
  "description": "Scripting language used for the MMORPG, Meridian 59",
	 "repository": "https://github.com/Meridian59/Meridian59",
	 "publisher": "Meridian59",
  "version": "0.0.1",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "kod",
        "aliases": [
          "kod",
          "kod"
        ],
        "extensions": [
          ".kod",
          ".lkod",
          ".khd"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "kod",
        "scopeName": "source.kod",
        "path": "./kod.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "package.json": "^2.0.1"
  }
}
