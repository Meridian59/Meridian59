   IsCombatant(who=$)
   {
      local i, count;

      count = 1;
      foreach i in plCombatants
      {
         if i = who
         {
            return count;
         }

         count = count + 1;
      }

      if IsClass(who,&Monster)
         AND NOT IsClass(who,&TosTown)
         AND Send(poOwner,@InPlay,#what=who,#bNonPlayerOkay=TRUE)
      {
         return TRUE;
      }

      return FALSE;
   }

