   Delete()
   {
      if ptTrap1 <> $
      {
         DeleteTimer(ptTrap1);
         ptTrap1 = $;
      }
      
      if ptTrap2 <> $
      {
         DeleteTimer(ptTrap2);
         ptTrap2 = $;
      }

      if ptTrap3 <> $
      {
         DeleteTimer(ptTrap3);
         ptTrap3 = $;
      }

      plTreasuresList = $;

      Send(poChest,@Delete);
      poChest = $;

      propagate;
   }

