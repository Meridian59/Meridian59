      plExits = Cons([ 24, 31, RID_TEMPLE_RIIJA, 22, 31, ROTATE_NONE ],plExits);
      plExits = Cons([ 23, 30, RID_TEMPLE_RIIJA, 25, 30, ROTATE_NONE ],plExits);
