Pillar is PassiveObject

constants:

   include blakston.khd

resources:

   pillar_name_rsc = "pillar"
   pillar_icon_rsc = marblplr.bgf
   pillar_desc_rsc = "This is a tall, impressive marble pillar."

classvars:

   vrName = pillar_name_rsc
   vrIcon = pillar_icon_rsc
