EntTreasure is TreasureType

constants:
   
   include blakston.khd
   
classvars:


properties:
   
   piTreasure_num = TID_ENT

   %% really pitiful chance to get reasonably good stuff
   piItem_att_chance = 1
   piDiff_seed = 4

messages:
   
   constructed()
   {
      plTreasure = [ [ &Entrootberry, 40],
                     [ &Money, 30 ],
                     [ &RedMushroom,9],
                     [ &Sapphire, 8 ],
                     [ &Emerald, 8 ],
                     [ &PurpleMushroom, 3 ],
                     [ &Lightningwand,2]
                   ];

      propagate;
   }

end
