NewbieAreaTreasure is TreasureType

%% This is special because it is used only for newbieville/demoville area, and
%% therefore must follow a reasonably tight script

constants:
   
   include blakston.khd
   
classvars:


properties:
   
   piTreasure_num = TID_NEWBIE_AREA

messages:
   
   constructed()
   {
      plTreasure = [ [ &Snack, 15 ],
                     [ &Money, 10 ],
                     [ &InkyCap, 5 ],
                     [ &Emerald, 7 ],
                     [ &Sapphire, 7 ],
                     [ &EntrootBerry, 5 ],
                     [ &FairyWing, 5 ],
                     [ &OrcTooth, 5 ],
                     [ &Gauntlet, 5 ],
                     [ &SimpleHelm, 5 ],
                     [ &Mace, 5 ],
                     [ &ShortSword, 5 ],
                     [ &LeatherArmor, 5 ],
                     [ &Flask , 3 ],
                     [ &MagicShieldPotion , 3 ],
                     [ &LightScroll , 3 ],
                     [ &LightningWand , 3 ],
                     [ &HealWand , 2 ],
                     [ &FireWand , 1 ],
                     [ &BerserkerRing, 1 ] ];

      propagate;
   }

end
