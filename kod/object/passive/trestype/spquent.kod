SpiderQueenTreasure is TreasureType

constants:

   include blakston.khd

classvars:

   viTreasure_num = TID_SPIDER_QUEEN

properties:

   %% good stuff, appears relatively rarely compared to other
   %% supermonsters.
   piDiff_seed = 5
   piItem_att_chance = 5

messages:

   Constructed()
   {
      plTreasure = [ [ &SpiderEgg, 40 ],
                     [ &BerserkerRing, 11 ],
                     [ &FireRing, 10 ],
                     [ &Emerald,  10 ],
                     [ &Sapphire, 8 ],
                     [ &Diamond,  7 ],
                     [ &BlueDragonScale, 6],
                     [ &Ruby, 4 ],
                     [ &DarkAngelFeather, 4]
                   ];

      propagate;
   }

end
