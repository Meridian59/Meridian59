ToughTreasure is TreasureType

constants:
   
   include blakston.khd
   
classvars:


properties:
   
   piTreasure_num = TID_TOUGH

   %% some great stuff, but generates rarely.

   piDiff_seed = 5
   piItem_att_chance = 2

messages:
   
   constructed()
   {
    plTreasure = [ [ &RedMushroom, 25 ],
                   [ &BlueMushroom, 20 ],
                   [ &Snack, 16],
                   [ &Emerald, 10 ],
                   [ &Sapphire, 8 ],
                   [ &Diamond,  6 ],
                   [ &BlueDragonScale, 6],
                   [ &Ruby, 4],
                   [ &InkyCap, 4],
                   [ &MartyrScroll, 1]
                 ];

      propagate;
   }

end
