VeryToughTreasure is TreasureType

constants:
   
   include blakston.khd
   
classvars:


properties:
   
   piTreasure_num = TID_VERY_TOUGH
   
   %% low chance of getting an outstanding item
   piItem_att_chance = 2
   piDIff_seed = 8

messages:
   
   constructed()
   {
      plTreasure = [ [ &Money, 29],
                     [ &InkyCap, 14],
                     [ &PurpleMushroom, 12 ],
                     [ &Sapphire, 12 ],
                     [ &Diamond, 9 ],
                     [ &Ruby, 7 ],
                     [ &BlueDragonScale, 7],
                     [ &DarkAngelFeather, 5],
                     [ &HoldWand, 2],
                     [ &MysticSword, 1 ],
                     [ &PlateArmor, 1 ],
                     [ &Key, 1 ]
                   ];

      propagate;
   }

end
