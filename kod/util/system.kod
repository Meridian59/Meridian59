   FindItemClassByName(string=$)
   {
      local i;
      
      foreach i in plItemTemplates
      {
         if StringEqual(string,Send(i,@GetName))
         {
            return GetClass(i);
         }
      }
      
      foreach i in plMoneyTemplates
      {
         if StringEqual(string,Send(i,@GetName))
         {
            return GetClass(i);
         }
      }
      
      return $;
   }
   
