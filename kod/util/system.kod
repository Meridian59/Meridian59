      Send(poRentableRoomMaintenance,@NewDay);
      Send(&SoldierShield,@NewDay);

      Send(Send(self,@FindSpellByNum,#num=SID_NODEBURST),@NewDay);

      Send(self,@VerifyUsersLoggedOn);

      return;
   }

