# makefile for bitmaps

!include $(TOPDIR)\common.mak

SOURCEDIR = $(TOPDIR)\resource\graphics
OUTDIR = $(TOPDIR)\resource\bin

.SUFFIXES: .bbg

{$(SOURCEDIR)}.bbg.bgf:
	cd ..\graphics
	makebgf -o $(OUTDIR)\$*.bgf @$*.bbg
	cd ..\bin

