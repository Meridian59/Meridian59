all:  $(BGFS)

light.bgf :
	makebgf -o $*.bgf 1 $(SOURCEDIR)\$*.bmp 1 1 1

boulder.bgf :
	makebgf -o $*.bgf -s 2 4 $(SOURCEDIR)\rock000.bmp \
	$(SOURCEDIR)\rock090.bmp $(SOURCEDIR)\rock180.bmp $(SOURCEDIR)\rock270.bmp \
	1 4 1 4 3 2

cavrockL.bgf :
	makebgf -o $*.bgf -s 2 \
	4 \
	$(SOURCEDIR)\cavrL000.bmp \
	$(SOURCEDIR)\cavrL045.bmp \
	$(SOURCEDIR)\cavrL090.bmp \
	$(SOURCEDIR)\cavrL315.bmp \
	1 \
	8 1 1 4 4 4 3 3 2 

cavrockR.bgf :
	makebgf -o $*.bgf -s 2 \
	4 \
	$(SOURCEDIR)\cavrR000.bmp \
	$(SOURCEDIR)\cavrR045.bmp \
	$(SOURCEDIR)\cavrR270.bmp \
	$(SOURCEDIR)\cavrR315.bmp \
	1 \
	8 1 4 3 3 3 2 2 1 

splash.bgf :
	makebgf -o $*.bgf 1 $(SOURCEDIR)\$*.bmp 1 1 1

clean: 
	$(RM) $(OUTDIR)\*

squeakyclean: clean

